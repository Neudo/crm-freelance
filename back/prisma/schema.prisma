datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}
generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

enum Role {
  FREELANCE
  CLIENT
}

model User {
  id    Int     @default(autoincrement()) @id
  email String  @unique
  name  String?
  projects Project[]
  password String
  role Role
}

enum ProjectStatus {
  IN_PROGRESS
  COMPLETED
  PAUSED
  CANCELLED
}

model Project {
  id    Int     @default(autoincrement()) @id
  name  String?
  user User @relation(fields: [userId], references: [id])
  userId Int
  title String
  description String
  image String?
  status ProjectStatus
  client String
  createdAt DateTime @default(now())
}

